4-Makefile# Compiler to be used
CC = gcc

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Source files
SRC = main.c school.c

# Object files
OBJ = $(SRC:.c=.o)

# Name of the executable
NAME = school

# Program to delete files
RM = rm -f
>>>>>>> a05557cd0c50cb78b4fa6363ec99c0ce54a8565f

.PHONY: all clean oclean fclean re

# Default target
all: $(NAME)

# Rule to build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile source files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@



clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
